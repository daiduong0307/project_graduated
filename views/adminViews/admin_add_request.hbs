<body id="page-top">
    <div id="wrapper">
        <!--=================================================-->
        {{> admin/subHeader}}
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">

                {{> admin/topBar}}
                <!-- Container Fluid-->
                <div class="container-fluid" id="container-wrapper">
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Add Request For
                            <span style="text-transform: uppercase; color:red">{{Staff.name}}</span>
                        </h1>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">List of Accounts</li>
                            <li class="breadcrumb-item active" aria-current="page"><a
                                    href="/admin/list_all_staffs">Staff ACcounts</a> </li>
                            <li class="breadcrumb-item active" aria-current="page"><a
                                    href="/admin/list_all_requests_staff">List All Request Staff </a> </li>
                            <li class="breadcrumb-item active" aria-current="page"><a href="/admin/add_request">Add
                                    Request </a> </li>
                        </ol>
                    </div>

                    <div class="row mb-3">

                        <!-- Modal Logout -->
                        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabelLogout" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabelLogout">Ohh No!</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to logout?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-outline-primary"
                                            data-dismiss="modal">Cancel</button>
                                        <a href="/" class="btn btn-primary">Logout</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!---Container Fluid-->




                    <div class="row">
                           <div class="col-lg-8" style="margin-left: 200px;">
                            <!-- Form Basic -->
                            <div class="card mb-4">
                                <div
                                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Enter Information Of New Request</h6>
                                </div>
                                <div class="card-body">
                                    <form action="/admin/addRequest" method="POST"
                                        enctype="application/x-www-form-urlencoded">
                                        <input type="hidden" name="_id" value={{Staff._id}}>
                                        <div class="form-group">
                                            <label for="exampleFormControlSelect1">Request Type</label>
                                            <select class="form-control" id="exampleFormControlSelect1"
                                                name="requestType_id" required>
                                                {{#each requestType}}
                                                <option value="{{_id}}">{{name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleFormControlSelect1">Business Units</label>
                                            <select class="form-control" id="exampleFormControlSelect1" name="BU_Id">
                                                {{#each BusinessUnit}}
                                                <option value="{{_id}}">{{name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="form-group" id="simple-date3">
                                            <label for="decadeView">Start Date</label>
                                            {{!-- <div class="input-group date"> --}}
                                                {{!-- <div class="input-group-prepend">
                                                    <span class="input-group-text"><i
                                                            class="fas fa-calendar"></i></span>
                                                </div> --}}
                                                <input type="date" class="form-control" name="startDateOff"
                                                    id="decadeView" value="1/1/2000" required>
                                                {{!--
                                            </div> --}}
                                        </div>
                                        <div class="form-group" id="simple-date3">
                                            <label for="decadeView">End Date</label>
                                            {{!-- <div class="input-group date">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i
                                                            class="fas fa-calendar"></i></span>
                                                </div> --}}
                                                <input type="date" class="form-control" name="endDateOff"
                                                    id="decadeView" value="1/1/2000" required>
                                                {{!--
                                            </div> --}}
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleFormControlTextarea1">Reason</label>
                                            <textarea class="form-control" id="exampleFormControlTextarea1"
                                                name="reason" rows="3" required></textarea>
                                        </div>

                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </div>
                            </div>

















                        </div>


                    </div>

                </div>
            </div>


</body>